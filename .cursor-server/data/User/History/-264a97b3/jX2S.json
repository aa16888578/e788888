{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "編譯",
    "rootDir": "程式碼",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["程式碼/**/*"],
  "exclude": ["node_modules", "編譯", "**/*.test.ts"]
}
