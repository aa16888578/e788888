# GMS 信用卡管理後台環境配置
# 複製此文件為 .env.local 並填入實際值

# ===== Next.js 配置 =====
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# ===== 應用配置 =====
NEXT_PUBLIC_APP_NAME=GMS 信用卡管理後台
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# ===== Firebase 配置 =====
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Firebase Admin SDK (服務端)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com

# ===== 數據庫配置 =====
FIRESTORE_DATABASE_URL=https://your-project-id.firebaseio.com
FIRESTORE_PROJECT_ID=your-project-id

# ===== 認證配置 =====
# JWT 密鑰
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# 管理員認證
ADMIN_EMAIL=admin@gms.com
ADMIN_PASSWORD=your-admin-password
ADMIN_SESSION_SECRET=your-session-secret

# ===== AI 服務配置 =====
# AI 分類服務
AI_SERVICE_ENDPOINT=https://your-ai-service.com/api
AI_SERVICE_API_KEY=your-ai-api-key
AI_MODEL_VERSION=1.0.0

# OpenAI (可選)
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-organization-id

# ===== 安全配置 =====
# CORS 允許的域名
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
# 允許的管理員 IP (可選)
ALLOWED_ADMIN_IPS=127.0.0.1,::1

# ===== 日誌配置 =====
LOG_LEVEL=info
LOG_FILE_PATH=./logs/admin.log
ENABLE_CONSOLE_LOG=true

# ===== 監控配置 =====
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_ANALYTICS=true

# ===== 緩存配置 =====
# Redis 配置 (可選)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
CACHE_TTL=3600

# ===== 文件上傳配置 =====
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DIR=./uploads

# ===== 通知配置 =====
ENABLE_NOTIFICATIONS=true
NOTIFICATION_CHANNELS=telegram,email

# Telegram 通知
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-admin-chat-id

# 郵件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ADMIN_EMAIL_ADDRESS=admin@gms.com

# ===== 開發配置 =====
DEBUG=false
DEVELOPER_MODE=false
ENABLE_HOT_RELOAD=true

# ===== 測試配置 =====
TEST_DATABASE_URL=https://your-test-project-id.firebaseio.com
TEST_FIREBASE_PROJECT_ID=your-test-project-id

# ===== 備份配置 =====
ENABLE_AUTO_BACKUP=true
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ===== 限流配置 =====
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5
LOGIN_RATE_LIMIT_WINDOW_MS=900000

# ===== 第三方服務配置 =====
# 驗證碼服務
CAPTCHA_SERVICE_KEY=your-captcha-key
CAPTCHA_SERVICE_SECRET=your-captcha-secret

# 支付網關 (如果需要)
PAYMENT_GATEWAY_API_KEY=your-payment-api-key
PAYMENT_GATEWAY_SECRET=your-payment-secret

# ===== 環境特定配置 =====
# 開發環境
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3000

# 生產環境 (部署時修改)
# NEXT_PUBLIC_API_URL=https://your-domain.com/api
# NEXT_PUBLIC_WEBSOCKET_URL=wss://your-domain.com

# ===== 功能開關 =====
ENABLE_AI_CLASSIFICATION=true
ENABLE_BULK_OPERATIONS=true
ENABLE_DATA_EXPORT=true
ENABLE_USER_MANAGEMENT=true
ENABLE_AUDIT_LOGS=true
ENABLE_REAL_TIME_UPDATES=true

# ===== 數據限制 =====
MAX_CARDS_PER_PAGE=100
MAX_SEARCH_RESULTS=1000
MAX_BULK_OPERATION_SIZE=500

# ===== 時間配置 =====
SESSION_TIMEOUT_MINUTES=60
PASSWORD_EXPIRY_DAYS=90
TOKEN_REFRESH_THRESHOLD_MINUTES=10
