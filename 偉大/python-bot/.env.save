# CVV Python Bot 環境變量配置

# 應用配置
APP_NAME=CVV Bot API
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# API 配置
API_V1_STR=/api/v1

# Telegram Bot 配置
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Firebase 配置 (部ｔｔ署後設置)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/

# 數據庫配置（如果使用 PostgreSQL）
DATABASE_URL=postgresql://user:password@localhost/cvvbot
REDIS_URL=redis://localhost:6379

# 安全配置
SECRET_KEY=your_very_secret_key_here_at_least_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your_encryption_key_32_bytes_long_here

# 支付配置
TRON_NETWORK=mainnet
USDT_CONTRACT_ADDRESS=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t

# CVV 配置
CVV_ENCRYPTION_ENABLED=true
CVV_BATCH_SIZE=1000
CVV_CACHE_TTL=3600
